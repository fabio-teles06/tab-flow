{
    "manifest_version": 3,
    "name": "Simple bi Slider",
    "version": "1.1",
    "description": "Troca automaticamente entre URLs de uma lista.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "loader.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}